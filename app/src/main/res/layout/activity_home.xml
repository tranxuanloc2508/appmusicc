<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="MusicApp"
        android:id="@+id/tv_head"
        android:textStyle="bold"
        android:textSize="60sp"
        android:textAlignment="center"
        android:layout_marginTop="20dp"
        />
    <ImageView
        android:id="@+id/iconn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/iconn"
        android:layout_below="@id/tv_head"
        android:layout_marginTop="20dp"/>
    <Button
        android:id="@+id/btn_register_home"
        android:layout_below="@id/iconn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="New user ? register with us"
        android:padding="30dp"
        android:textSize="15sp"
        android:textColor="@android:color/white"
        android:background="@drawable/input_desgin"
        android:layout_marginTop="80dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"/>
    <Button
        android:id="@+id/btn_login_home"
        android:layout_below="@id/btn_register_home"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Login Now"
        android:padding="30dp"
        android:textSize="20sp"
        android:textColor="@android:color/white"
        android:background="@drawable/input_desgin"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"/>
</RelativeLayout>